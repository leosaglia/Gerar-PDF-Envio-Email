@model PDF_EMAIL.Models.NovoColaborador

@{
    ViewData["Title"] = "Formul√°rio novo colaborador";
}

<h1>Cadastro de novo colaborador</h1>

<form asp-action="Cadastrar" asp-controller="NovoColaborador" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="control-label" asp-for="NomeColaborador"></label>
        <input asp-for="NomeColaborador" class="form-control" />
        <span asp-validation-for="NomeColaborador" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Cargo"></label>
        <input asp-for="Cargo" class="form-control" />
        <span asp-validation-for="Cargo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Area"></label>
        <input asp-for="Area" class="form-control" />
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input type="checkbox" asp-for="AcessoAX" class="form-check-input" />
        <label class="form-check-label" asp-for="AcessoAX"></label>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Cadastrar </button>
    </div>
</form>